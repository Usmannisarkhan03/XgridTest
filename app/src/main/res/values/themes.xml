<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XgridTest" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DarkTheme" parent="Theme.XgridTest">

        <item name="bgColor">@color/black</item>
        <item name="buttonColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="buttonTextColor">@color/black</item>
        <item name="themeIcon">@drawable/theme_icon_dark</item>

    </style>

    <style name="LightTheme" parent="Theme.XgridTest">

        <item name="bgColor">@color/white</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="buttonColor">@color/black</item>
        <item name="textColor">@color/black</item>
        <item name="themeIcon">@drawable/theme_icon</item>

    </style>

</resources>